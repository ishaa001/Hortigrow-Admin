<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
    integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Raleway:800|Roboto+Slab" rel="stylesheet">
  <link
    href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300&family=Noto+Sans&family=Original+Surfer&display=swap"
    rel="stylesheet">

  {{>style_add_product_SP}}
  <!-- <link rel="stylesheet" href="../css/style_add_product_SP.css"> -->
  <title>HortiGrow</title>
  <link rel="shortcut icon" type="image/x-icon" href="../Images/fav.ico">

  <script>
    function start() {
      Push.create("HortiGrow", {
        body: "Product Added!",
        icon: 'https://banner2.cleanpng.com/20180411/eoq/kisspng-leaf-plant-logo-root-plant-5ace75f3a9ada5.454160361523480051695.jpg',
        timeout: 4000,
        onClick: function () {
          window.focus();
          this.close();
        }
      });
    }

    function myfunc() {
      alert("We are Adding!");
    }

  </script>
</head>

<body>

  <article class="container">

    <!-- Navbar -->
    <nav>
      <ul>
        <li><a href="/index">Home</a></li>

        <li><a href="#">Manage</a>
          <ul class="dropdown">
            <li><a href="/Index/manage_user">users</a></li>
            <li><a href="/Index/manage_product">Products</a></li>
          </ul>

        </li>
        <li>
          <a href="#">Reports</a>
          <ul class="dropdown">
            <li><a href="/Index/user_report">Users</a></li>
            <li><a href="/Index/product_report">Products</a></li>
            <li><a href="/Index/order_report">Feedback</a></li>
          </ul>
        </li>
        <li><a href="#"><i class="fa fa-user"></i></a>
          <ul class="dropdown">
            <li><a href="/Index/signIn">Logout</a></li>
          </ul>
        </li>
      </ul>
    </nav>

    <!-- Responsive Navbar-->
    <section class="menu-btn">
      +
    </section>

    <!-- Main Heading-->

    <section class="section-follow">
      <h3 class="follow-me">Add New Product</h3>
    </section>


    <section>
      <section class="description">
        <div class="Container">
          <form method="POST" action="/Index/manage_product" id="update_user">
            <input type="hidden" name="_id" value="{{product._id}}">
            <div class="new_user">
              <div class="form-group">
                <label for="name" class="text-light">Product Name</label>

                <input type="hidden" name="id" value="">
                <input type="text" name="name" value="{{product.ProductName}}" placeholder="Product">
                <label for="Description" class="text-light">Product Description</label>
                <input type="text" name="description" value="{{product.ProductDescription}}" placeholder="xyz">
                <label for="in stock" class="text-light">Units in Stock</label>
                <input type="number" name="stock" value="{{product.ProductStock}}" placeholder="10">
                <label for="img" class="text-light">Upload Image</label>
                <input type="file" name="image" value="{{product.ProductImage}}" placeholder="">
                <label for="expiry" class="text-light">Expire Date</label>
                <input type="date" name="expire" value="{{product.ProductDate}}" placeholder="01/01/2001">
                <!-- <textarea rows="3" cols="15">hello</textarea> -->
                <label for="Description" class="text-light">Product Category</label>
                <select id="Category" name="Category">
                  <option value="seedbeds">SeedBeds</option>
                  <option value="seeds">Seeds</option>
                  <option value="plants">plants</option>
                </select>
                <label for="Price" class="text-light">Product Price</label>
                <input type="number" name="price" value="{{product.ProductPrice}}" placeholder="â‚¹500">
              </div>
              <div class="form-group">
                <button type="submit" class="btn text-dark update" onclick="start();myfunc()">Save</button>
              </div>

            </div>
          </form>
        </div>
      </section>
    </section>


    <!-- Footer-->
    <footer>
      HortiGrow &copy; 2021
    </footer>

  </article>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/push.js/1.0.8/push.min.js"></script>

  <script src="serviceWorker.min.js"></script>
  <script>
    const menuBtn = document.querySelector(".menu-btn");
    const nav = document.querySelector("nav");

    menuBtn.addEventListener("click", function () {
      menuBtn.classList.toggle("active");
      nav.classList.toggle("active");
    })

    window.addEventListener("scroll", function () {
      if (window.pageYOffset > 4) {
        nav.classList.add("scrolled");
      } else {
        nav.classList.remove("scrolled");
      }
    })
  </script>

</body>

</html>